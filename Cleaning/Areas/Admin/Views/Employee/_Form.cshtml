@model EmployeeViewModel

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card mt-2">
            <div class="card-header text-white bg-primary">
                <h2>@(Model.Id != null ? $"Редактирай служител: {Model.UserName}" : "Добави служител")</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Employee" asp-action="@(Model.Id != null ? "Update" : "Create")" method="post">
                    <input type="hidden" asp-for="Id" />
                   
                    <div asp-validation-summary="All"></div>

                    <div class="row mb-3 p-1">
                        <label asp-for="FirstName" class="p-0"></label>
                        <input asp-for="FirstName" class="form-control" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="LastName" class="p-0"></label>
                        <input asp-for="LastName" class="form-control" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="UserName" class="p-0"></label>
                        <input asp-for="UserName" class="form-control" aria-required="true" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Email" class="p-0"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="Password" class="p-0"></label>
                        <input asp-for="Password" type="password" class="form-control" aria-required="true" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row mb-3 p-1">
                        <label asp-for="ConfirmPassword" class="p-0"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" aria-required="true" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary form-control">@(Model.Id != null ? "Редактирай" : "Създай")</button>
                        </div>
                        <div class="col-4">
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary form-control">Към служители</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>